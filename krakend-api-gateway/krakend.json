{
  "$schema": "https://www.krakend.io/schema/v2.7/krakend.json",
  "version": 3,
  "name": "ClearSky API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "host": ["http://localhost:8080"],
  
  "extra_config": {
    "security/cors": {
      "allow_origins": [
        "http://localhost:3000",
        "http://localhost:3001", 
        "http://localhost:3002",
        "https://your-student-portal.com",
        "https://your-instructor-portal.com",
        "https://your-institution-portal.com"
      ],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allow_headers": ["Origin", "Authorization", "Content-Type", "X-Requested-With"],
      "expose_headers": ["Content-Length"],
      "max_age": "12h",
      "allow_credentials": true
    },
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    }
  },

  "endpoints": [
    {
      "endpoint": "/auth/user/login",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/auth/login",
          "encoding": "json",
          "method": "POST",
          "host": ["http://user-auth-service:8001"],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/auth/user/validate",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://user-auth-service:8001/.well-known/jwks.json",
          "disable_jwk_security": true,
          "cache": true,
          "cache_duration": 900
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/auth/validate",
          "encoding": "json",
          "method": "GET",
          "host": ["http://user-auth-service:8001"]
        }
      ]
    },
    {
      "endpoint": "/auth/institution/login",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/auth/login",
          "encoding": "json",
          "method": "POST",
          "host": ["http://institution-auth-service:8002"]
        }
      ]
    },
    {
      "endpoint": "/users/{user_id}",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://user-auth-service:8001/.well-known/jwks.json",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/users/{user_id}",
          "encoding": "json",
          "method": "GET",
          "host": ["http://user-management-service:8003"]
        }
      ]
    },
    {
      "endpoint": "/users",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/users",
          "encoding": "json",
          "method": "POST",
          "host": ["http://user-management-service:8003"]
        }
      ]
    },
    {
      "endpoint": "/institutions/{institution_id}",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://institution-auth-service:8002/.well-known/jwks.json",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/institutions/{institution_id}",
          "encoding": "json",
          "method": "GET",
          "host": ["http://institution-service:8004"]
        }
      ]
    },
    {
      "endpoint": "/institutions",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/institutions",
          "encoding": "json",
          "method": "POST",
          "host": ["http://institution-service:8004"]
        }
      ]
    },
    {
      "endpoint": "/institutions/{institution_id}/credits",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://institution-auth-service:8002/.well-known/jwks.json",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/institutions/{institution_id}/credits",
          "encoding": "json",
          "method": "GET",
          "host": ["http://institution-credits-service:8005"]
        }
      ]
    },
    {
      "endpoint": "/grades/{grade_id}",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://user-auth-service:8001/.well-known/jwks.json",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/grades/{grade_id}",
          "encoding": "json",
          "method": "GET",
          "host": ["http://grade-service:8006"]
        }
      ]
    },
    {
      "endpoint": "/grades/bulk-upload",
      "method": "POST",
      "output_encoding": "json",
      "timeout": "30s",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://institution-auth-service:8002/.well-known/jwks.json",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/orchestrator/grade-lifecycle/upload",
          "encoding": "json",
          "method": "POST",
          "host": ["http://grade-lifecycle-orchestrator:8010"]
        }
      ]
    },
    {
      "endpoint": "/grades/{grade_id}/finalize",
      "method": "PUT",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://institution-auth-service:8002/.well-known/jwks.json",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/orchestrator/grade-lifecycle/{grade_id}/finalize",
          "encoding": "json",
          "method": "PUT",
          "host": ["http://grade-lifecycle-orchestrator:8010"]
        }
      ]
    },
    {
      "endpoint": "/statistics/institution/{institution_id}",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://institution-auth-service:8002/.well-known/jwks.json",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/statistics/institution/{institution_id}",
          "encoding": "json",
          "method": "GET",
          "host": ["http://statistics-service:8007"]
        }
      ]
    },
    {
      "endpoint": "/reviews",
      "method": "POST",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://user-auth-service:8001/.well-known/jwks.json",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/orchestrator/review/request",
          "encoding": "json",
          "method": "POST",
          "host": ["http://review-orchestrator:8011"]
        }
      ]
    },
    {
      "endpoint": "/reviews/{review_id}",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://user-auth-service:8001/.well-known/jwks.json",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/reviews/{review_id}",
          "encoding": "json",
          "method": "GET",
          "host": ["http://review-service:8009"]
        }
      ]
    },
    {
      "endpoint": "/orchestrator/user-flow/register",
      "method": "POST",
      "output_encoding": "json",
      "timeout": "10s",
      "backend": [
        {
          "url_pattern": "/api/v1/orchestrator/user-flow/register",
          "encoding": "json",
          "method": "POST",
          "host": ["http://user-flow-orchestrator:8012"]
        }
      ]
    },
    {
      "endpoint": "/orchestrator/user-flow/login",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/orchestrator/user-flow/login",
          "encoding": "json",
          "method": "POST",
          "host": ["http://user-flow-orchestrator:8012"]
        }
      ]
    },
    {
      "endpoint": "/health",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/health",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://user-auth-service:8001",
            "http://institution-auth-service:8002",
            "http://user-management-service:8003",
            "http://institution-service:8004",
            "http://institution-credits-service:8005",
            "http://grade-service:8006",
            "http://statistics-service:8007",
            "http://notification-service:8008",
            "http://review-service:8009"
          ]
        }
      ]
    }
  ]
}